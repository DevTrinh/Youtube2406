<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_item_main_video"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.7"
        android:scaleType="centerCrop"
        android:src="@drawable/iv_main_model"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_item_main_avt_video"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_item_main_video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintVertical_bias="0.2"
        android:src="@drawable/iv_main_model"/>

    <TextView
        android:id="@+id/tv_item_main_title_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_item_main_video"
        app:layout_constraintLeft_toRightOf="@id/iv_item_main_avt_video"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_main_avt_video"
        app:layout_constraintWidth_percent="0.73"
        app:layout_constraintVertical_bias="0.6"
        android:layout_marginStart="12dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="VÌ MẸ ANH BẮT CHIA TAY | MIU LÊ x KARIK x CHÂU ĐĂNG KHOA | Official MV"
        android:lines="2"
        />

    <TextView
        android:id="@+id/tv_item_main_name_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_main_title_video"
        app:layout_constraintLeft_toLeftOf="@+id/tv_item_main_title_video"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0.2"
        android:text="Linh Nhi Chill"
        android:textColor="#5E5E5E"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/tv_item_main_view_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_main_title_video"
        app:layout_constraintLeft_toRightOf="@+id/tv_item_main_name_channel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0.2"
        android:layout_marginStart="12dp"
        android:text="2.3M views"
        android:textColor="#5E5E5E"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/tv_item_main_time_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_main_title_video"
        app:layout_constraintLeft_toRightOf="@+id/tv_item_main_view_count"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0.2"
        android:layout_marginStart="12dp"
        android:text="10 months ago"
        android:textColor="#5E5E5E"
        android:textSize="13sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>